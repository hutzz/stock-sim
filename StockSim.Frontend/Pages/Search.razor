@page "/search"
@attribute [Authorize]
@using StockSim.Frontend.Models
@using StockSim.Frontend.Services
@using StockSim.Frontend.Components
@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Components
@inject IStockService StockService
@inject ITokenService TokenService
@inject IUserService UserService
@inject ISearchService SearchService
@inject NavigationManager NavigationManager

<AuthorizeView>
    <Authorized>
        <div class="flex flex-col items-center bg-gray-800 h-screen overflow-x-hidden">
            <Navbar />
            <div class="relative w-1/2 xl:w-1/3 2xl:w-1/4">
                <input class="pl-1 mt-4 w-full h-8 placeholder:m-8 rounded-md" type="text" @bind="@searchTerm" @bind:event="oninput" placeholder="Search stocks...">
                @if (!string.IsNullOrWhiteSpace(searchTerm)) {
                    <ul class="absolute top-full bg-white border border-gray-300 max-h-48 overflow-y-auto w-full rounded-md mt-1">
                        @foreach (var stock in filteredStocks) {
                            <li class="flex justify-start items-center mb-2 sm:mb-0 p-1 min-h-16 xs:min-h-9 border-b-gray-400 hover:bg-sky-300"> @(stock.Name.Length <= 30 ? stock.Name : stock.Name.Substring(0, 30) + "...") (@stock.Ticker)</li>
                        }
                    </ul>
                }
            </div>
        </div>
    </Authorized>
</AuthorizeView>
